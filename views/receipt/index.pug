doctype html
html(lang="en")
  head
    title List of receipts
    style.
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
      }
      h1 {
        color: #333;
        margin-bottom: 20px;
      }
      .receipt {
        background-color: #fff;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 8px;
      }
      h2 {
        color: #007bff;
      }
      p {
        color: #666;
        margin: 5px 0;
      }
      form {
        margin-top: 10px;
      }
      button {
        background-color: #ffc107;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      button:hover {
        background-color: #e0a800;
      }
  body
    h1 List of receipts
    h2 Create a recipe

    each receipt in receipts
      .receipt
        h2= receipt.name
        p Description: #{receipt.description}
        p Author: #{receipt.author}
        p Receipt: #{receipt.receipt}
        form(action='/like', method='POST')
          input(type='hidden', name='receiptId', value=receipt._id)
          button(type='submit') Like